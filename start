#!/bin/fish

dev "set-option global makecmd 'pdflatex -output-directory /home/ponet/Documents/PhD/Thesis/papers /home/ponet/Documents/PhD/Thesis/papers/Thesis.tex && pkill -HUP mupdf'
cd papers
hook global ModeChange .*:insert:.* %{nop %sh{ pdflatex -output-directory /home/ponet/Documents/PhD/Thesis/papers /home/ponet/Documents/PhD/Thesis/papers/Thesis.tex > /dev/null 2>&1 < /dev/null & } }
"
